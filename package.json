  "author": "Marc Marina",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "mongo:start": "docker run --rm -d -p 27017:27017 --name alki_mongo mongo:latest",
    "prepare": "husky install",
    "serve": "node dist/index.js",
    "prestart": "yarn install",
    "start": "nodemon --exec ts-node --files src/index.ts",
    "test": "jest --passWithNoTests",
    "verify": "yarn build --noEmit && yarn lint && yarn test"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.8.3",
    "pino": "^8.0.0",
    "pino-http": "^8.3.1"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.15",
    "@types/jest": "29.2.5",
    "@types/lodash": "4.14.191",
    "@types/node": "16.18.8",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "eslint": "8.31.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "nodemon": "2.0.20",
    "pino-pretty": "9.1.1",
    "prettier": "2.8.2",
